<div class="container">
  <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
      <div class="panel-heading">
        <div class="panel-title">Sign In</div>
      </div>

      <div class="panel-body login">
        <form class="form-horizontal" ng-submit="formSubmit()" role="form">

          <div class="input-group login-input">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-user"></i>
            </span>
            <input  type="text" class="form-control" ng-model="user.clientId" name="username" value="" placeholder="Client Id">
          </div>

          <div class="input-group login-input">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock"></i>
            </span>
            <input type="password" class="form-control" ng-model="user.clientSecret" name="password" placeholder="Client Secret">
          </div>

          <div class="form-group login-submit">
            <div class="col-sm-12 controls">
              <button type="submit" class="btn btn-success">Login</button>
            </div>
          </div>
          
          <span us-spinner spinner-key="spinner-1"></span>
        </form>
      </div>
    </div>
  </div>
</div>
